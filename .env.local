# Application configuration
NODE_ENV=development
PORT=3000
HEALTH_CHECK_PORT=3001
LOG_LEVEL=debug

# Network intelligence specific
MAX_RETRIES=5
TIMEOUT_MS=60000
BATCH_SIZE=100
WORKER_CONCURRENCY=4

# Database configuration (example)
DATABASE_URL=postgresql://localhost:5432/network_intelligence_dev
REDIS_URL=redis://localhost:6379

# API keys and secrets (replace with your actual values)
NETWORK_API_KEY=your-dev-api-key
JWT_SECRET=your-local-jwt-secret
ENCRYPTION_KEY=your-local-encryption-key

# External service URLs
INTELLIGENCE_SERVICE_URL=http://localhost:8080
NOTIFICATION_SERVICE_URL=http://localhost:9000

# Monitoring and observability
METRICS_ENABLED=true
TRACE_ENABLED=true
DEBUG_MODE=true
